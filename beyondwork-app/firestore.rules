rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user role from custom claims
    function getUserRole() {
      return request.auth.token.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() in ['CORPORATE_ADMIN', 'SUPER_ADMIN'];
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'SUPER_ADMIN';
    }
    
    // Users Collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      // Users can create/update only their own profile
      allow create, update: if isAuthenticated() && isOwner(userId);
      
      // Only super admins can delete users
      allow delete: if isSuperAdmin();
    }
    
    // Events Collection
    match /events/{eventId} {
      // Anyone authenticated can read events
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create events
      allow create: if isAuthenticated();
      
      // Users can update if:
      // 1. They're the creator (for editing event details)
      // 2. They're an admin
      // 3. They're only adding themselves to participants array
      allow update: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid || 
        isAdmin() ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['participants']) &&
         request.auth.uid in request.resource.data.participants &&
         !(request.auth.uid in resource.data.participants))
      );
      
      // Only event creator or super admin can delete
      allow delete: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || isSuperAdmin());
    }
    
    // Facilities Collection
    match /facilities/{facilityId} {
      // Anyone can read facilities
      allow read: if isAuthenticated();
      
      // Only admins can create/update/delete facilities
      allow write: if isAdmin();
    }
    
    // Bookings Collection
    match /bookings/{bookingId} {
      // Users can read their own bookings
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // No direct writes - must go through Cloud Functions
      allow create: if isAuthenticated();
      
      // Only booking owner or admin can update
      allow update: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only super admin can delete
      allow delete: if isSuperAdmin();
    }
    
    // Communities Collection
    match /communities/{communityId} {
      // Anyone authenticated can read communities
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a community
      allow create: if isAuthenticated();
      
      // Only community creator or admin can update
      allow update: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
      
      // Only community creator or super admin can delete
      allow delete: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || isSuperAdmin());
    }
    
    // Leaderboards Collection
    match /leaderboards/{leaderboardId} {
      // Anyone authenticated can read leaderboards
      allow read: if isAuthenticated();
      
      // No direct writes - must be updated by scheduled functions
      allow write: if false;
    }
  }
}
